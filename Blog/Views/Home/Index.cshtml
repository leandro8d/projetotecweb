@{
    ViewBag.Title = "Home Page";
}
<div ng-controller="homecontroller">
    <div ng-repeat="postagem in postagens " class="panel panel-default">
        <div  class="panel-heading">{{postagem.TITULO}}</div>
        <div class="panel-body">
           <table>
               <tr >
                   <td>
                       {{postagem.DESCRICAO}}
                   </td>
               </tr>

           </table>

            <input ng-model="nomeUsuario" />
            <button type="button" ng-click="adicionarUsuario(nomeUsuario)">adicionar</button>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Panel title</h3>
        </div>
        <div class="panel-body">
            Panel content
        </div>
    </div>
</div>

